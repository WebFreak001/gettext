{
    "name": "teohdemo",
    "authors": [
        "Bastiaan Veelo"
    ],
    "copyright": "Copyright Â© 2022, SARC B.V.",
    "description": "Replica of H.S. Teoh's proof of concept from https://forum.dlang.org/post/mailman.2526.1585832475.31109.digitalmars-d@puremagic.com",
    "license": "BSL-01",
    "targetType": "executable",
    "targetPath":  "bin",
    "dependencies": {
        "gettext": {
            "path": "../../",
            "version": "*"
        }
    },
    "configurations": [
        {
            "name": "default",
            "postBuildCommands": [
                "dub run --config=xgettext",
                "dub run gettext:merge -- --popath=po",
                "dub run gettext:po2mo -- --popath=po --mopath=mo"
            ],
            "copyFiles": [
                "mo"
            ]
        },
        {
            "name": "xgettext",
            "targetPath": ".xgettext",
            "versions": [ "xgettext" ],
            "subConfigurations": {
                "gettext": "xgettext"
            }
        }
    ]
}
