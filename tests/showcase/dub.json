    "targetType": "executable",
    "targetPath": "bin",
    "dependencies": {
        "gettext": {
            "path": "../../",
            "version": "*"
        }
    },
    "configurations": [
        {
            "name": "default",
            "postBuildCommands": [
                "dub run --config=xgettext",
                "dub run gettext:merge -- --popath=po --backup=none",
                "dub run gettext:po2mo -- --popath=po --mopath=mo"
            ],
            "copyFiles": [
                "mo"
            ]
        },
        {
            "name": "xgettext",
            "targetPath": ".xgettext",
            "versions": [ "xgettext" ],
            "subConfigurations": {
                "gettext": "xgettext"
            }
        }
    ]
}
